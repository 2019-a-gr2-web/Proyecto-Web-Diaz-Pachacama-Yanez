<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Proyecto</title>
</head>
<style>
    .texto {
        border: #428bca 1px solid;
        border-radius: 5px;
        padding-bottom: 5px;
        padding-top: 5px;
        width: 100%;
    }

    .barra {
        margin-top: 10px;
        margin-bottom: 10px;
    }

    #form {
        border: #428bca 1px solid;
        border-radius: 5px;
        padding-top: 20px;
        padding-bottom: 20px;
        /*margin: 20px 20px 20px 20px;*/
        margin: 20px auto;
    }

    button {
        width: 100%;
    }

    h1 {
        text-align: center;
        padding-bottom: 20px;
    }

    tr, td, th {
        border: #428bca 1px solid;
        padding: 10px 5px;
        text-align: center;
    }

    table {
        width: 100%;
    }
</style>
<body>
<% const nombreUsuario = nombre; %>
<%- include('menu', {username: nombreUsuario}) %>
<div class="container" id="form">
    <div class="row">
        <div class="col-lg-12">
            <h1>Mis Cursos</h1>
        </div>
    </div>
    <% if (arrayNotas.length === 0) {%>
        <p>No te has inscrito a ningun curso</p>
    <% } else { %>
    <div class="table-responsive">
        <table>
            <tr>
                <th>Curso</th>
                <th>Calificacion</th>
                <th>Observaci√≥n</th>
            </tr>
            <% arrayNotas.forEach((notas)=>{ %>
            <tr>
                <td><%= notas.cursoId.nombreCurso %></td>
                <td><%= notas.calificaciones %></td>
                <td><%= notas.observaciones %></td>
            </tr>
            <% }) %>
        </table>
    </div>
    <% } %>
</div>
</body>
</html>