<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Proyecto</title>
</head>
<style>
    .texto{
        border: #428bca 1px solid;
        border-radius: 5px;
        padding-bottom: 5px;
        padding-top: 5px;
        width: 100%;
    }
    .barra {
        margin-top: 10px;
        margin-bottom: 10px;
    }
    #form {
        border: #428bca 1px solid;
        border-radius: 5px;
        padding-top: 20px;
        padding-bottom: 20px;
        /*margin: 20px 20px 20px 20px;*/
        margin: 20px auto;
    }
    button {
        width: 100%;
    }
    h1 {
        text-align: center;
        padding-bottom: 20px;
    }
    tr,td,th {
        border: #428bca 1px solid;
        padding: 10px 5px;
        text-align: center;
    }
    table{
        width: 100%;
    }
</style>
<body>
<% const nombreUsuario = nombre;%>
<%- include('menuProfesor', {username: nombreUsuario})%>
<div class="container" id="form">
    <div class="row">
        <div class="col-lg-12">
            <h1>Listado de Estudiantes</h1>
        </div>
    </div>
    <% if (arrayNotas.length === 0) {%>
    <p>No existen estudiantes registrados</p>
    <% } else { %>
<div class="table-responsive">
<table>
    <tr>
        <th>Nombre Alumno</th>
        <th>Correo Electronico</th>
        <th>Acciones</th>
    </tr>
    <%arrayNotas.forEach((notas)=>{%>
    <tr>
        <td><%=notas.usuarioId.nombre%></td>
        <td><%=notas.usuarioId.email%></td>
        <td>
            <% const existeMensaje = mensaje %>
            <% if (existeMensaje) { %>
                <p style="color: red;">¡Error al Calificar! ¡La nota no debe ser mayor a 10 ni menor a 0!</p>
            <% } %>
            <form action="/proyecto/calificar" method="post">
                <input type="hidden" name="idNota" value="<%=notas.idNotas%>"/>
                <input type="hidden" name="idCurso" value="<%=notas.cursoId.idCurso%>"/>
                <div class="row barra">
                    <div class="col-sm-4"> <label for="calificaciones">Calificación:</label></div>
                    <div class="col-sm-8"><input type="number" class="texto" id="calificaciones" name="calificaciones"  step="0.01" value="<%=notas.calificaciones%>"/></div>
                </div>
                <div class="row barra">
                    <div class="col-sm-4"><label for="observaciones">Observaciones: </label></div>
                    <div class="col-sm-8"><input type="text" class="texto" id="observaciones" name="observaciones" placeholder="observacion" value="<%=notas.observaciones%>"/>
                    </div>
                </div>
                <div class="row barra">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-6">
                        <button class="btn btn-success">Calificar</button>
                    </div>
                    <div class="col-sm-3"></div>
                </div>
            </form>
        </td>
    </tr>
    <%})%>
</table>
</div>
    <% } %>
</div>
</body>
</html>